cabal-version: 2.2

name:          kda-miner
version:       1.0.1
description:   Official mining software for the Kadena Public Blockchain.
homepage:      https://github.com/kadena-io/chainweb-miner
author:        Kadena Developers
maintainer:    colin@kadena.io
copyright:     2019 Kadena LLC
license:       BSD-3-Clause
license-file:  LICENSE
build-type:    Simple

extra-source-files:
  README.md

common commons
  default-language: Haskell2010
  build-depends: base >= 4.12 && < 5
  ghc-options:
    -Wall
    -Wcompat
    -Wpartial-fields
    -Wincomplete-record-updates
    -Wincomplete-uni-patterns
    -Widentities
    -funclutter-valid-hole-fits
    -fmax-relevant-binds=0

library 
  import: commons
  hs-source-dirs: open-cl
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  exposed-modules: Data.OpenCL
  build-depends:
      OpenCL >= 1.0.3
    , text >= 1.2.3

executable kda-miner
  import: commons
  hs-source-dirs: exec
  main-is: Miner.hs
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  build-depends:
      kda-miner
    , text >= 1.2.3
    , bytestring >= 0.10
    , chainweb >= 1.0
    , connection >= 0.3
    , data-default >= 0.7
    , generic-lens >= 1.2
    , http-client >= 0.6
    , http-client-tls >= 0.3
    , http-types >= 0.12
    , mwc-random >= 0.14
    , optparse-applicative >= 0.14
    , pact >= 3.3
    , paths >= 0.2
    , retry >= 0.8
    , rio >= 0.1.12
    , scheduler >= 1.4.2
    , servant-client >= 0.16
    , streaming >= 0.2
    , streaming-events >= 1.0
    , strict-tuple >= 0.1.3
    , time >= 1.8
    , wai-extra >= 3.0
    , OpenCL >= 1.0.3
